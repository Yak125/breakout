{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++20",
                "${file}",
                "-o",
                "${fileDirname}/game",
                "-I/opt/homebrew/opt/raylib/include",
                "-L/opt/homebrew/opt/raylib/lib",
                "-lraylib",
                "-framework", "IOKit",
                "-framework", "Cocoa",
                "-framework", "OpenGL",
                "&&",
                "${fileDirname}/game"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile and run breakout"
        }
    ]
}
